<local:CustomWindow x:Class="BridgeOpsClient.ReportToTemplatesRun"
                    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                    xmlns:local="clr-namespace:BridgeOpsClient"
                    xmlns:custom="clr-namespace:BridgeOpsClient.CustomControls"
                    mc:Ignorable="d"
                    ResizeMode="NoResize"
                    Title="Report to Templates"
                    SizeToContent="WidthAndHeight" UseLayoutRounding="True" WindowStartupLocation="CenterScreen"
                    ContentRendered="CustomWindow_ContentRendered">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <!-- Progress Bar -->
        <Border Height="20" Width="880" Margin="10" VerticalAlignment="Top" Background="LightGray"
                x:Name="bdrProgressBarRail">
            <Border HorizontalAlignment="Left" Width="100" x:Name="bdrProgressBar"
                    Background="{StaticResource brushDerynsPurpleBar}"/>
        </Border>

        <!-- Event Leg -->
        <ListBox x:Name="lstEventLog" Margin="10 0 10 10" Grid.Row="1"
                 Height="700" MaxHeight="700" MaxWidth="880"/>
    </Grid>
</local:CustomWindow>
