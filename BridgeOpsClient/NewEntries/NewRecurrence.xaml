<local:CustomWindow x:Class="BridgeOpsClient.NewRecurrence"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BridgeOpsClient"
        mc:Ignorable="d" SizeToContent="Height" Width="300"
        Title="New Recurrence" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Content="Name" FontWeight="SemiBold" Margin="5 10 10 0"/>
        <TextBox x:Name="txtName" Grid.Row="1" Margin="10 0 10 10"/>
        <Label Grid.Row="2" Content="Notes" FontWeight="SemiBold" Margin="5 5 10 0"/>
        <TextBox x:Name="txtNotes" Grid.Row="3" Margin="10 0 10 10" Height="100" AcceptsReturn="True"/>
        <Button x:Name="btnSave" Grid.Row="4" Content="Save"
                Margin="10 10 10 20" Width="50" HorizontalAlignment="Left" Click="btnSave_Click"
                Style="{StaticResource primary-button}"/>
    </Grid>
</local:CustomWindow>
