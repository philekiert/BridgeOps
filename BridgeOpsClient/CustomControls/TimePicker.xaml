<UserControl x:Class="BridgeOpsClient.CustomControls.TimePicker"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:BridgeOpsClient.CustomControls"
             mc:Ignorable="d" HorizontalAlignment="Left" VerticalAlignment="Center">
    <Grid Width="Auto" Height="24">
        <TextBox x:Name="txt" Grid.Column="0" MaxLength="5" Width="41" Padding="3 0 0 0"
                 VerticalAlignment="Center" LostFocus="txt_LostFocus" Height="24" Margin="0 0 0 0"
                 VerticalContentAlignment="Center"
                 PreviewTextInput="txt_PreviewTextInput" GotKeyboardFocus="txt_GotKeyboardFocus"
                 PreviewMouseDoubleClick="txt_PreviewMouseDoubleClick"/>
    </Grid>
</UserControl>
