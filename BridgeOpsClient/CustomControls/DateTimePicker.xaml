<UserControl x:Class="BridgeOpsClient.CustomControls.DateTimePicker"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BridgeOpsClient.CustomControls"
             mc:Ignorable="d">
    <Grid Height="25" x:Name="grd">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="110"/>
            <ColumnDefinition Width="48"/>
        </Grid.ColumnDefinitions>
        <DatePicker VerticalAlignment="Center" x:Name="datePicker" Grid.Column="0"
                    Margin="0 0 8 0" Height="24"/>
        <local:TimePicker x:Name="timePicker" Height="24" Grid.Column="1" VerticalAlignment="Center"
                          Margin="0 0 0 0"/>
    </Grid>
</UserControl>
