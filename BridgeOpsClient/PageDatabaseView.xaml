<Page x:Class="BridgeOpsClient.PageDatabaseView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BridgeOpsClient"
      xmlns:custom="clr-namespace:BridgeOpsClient.CustomControls"
      mc:Ignorable="d" d:DesignWidth="800" Height="440"
      Title="PageDatabaseView"
      >

    <Grid x:Name="pageGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="44" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid>
            <!-- Search bar -->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <ComboBox x:Name="cmbTable" Grid.Row="0" Grid.Column="0" Margin="10 10 10 10" Width="100"
                      SelectionChanged="cmbTable_SelectionChanged">
                <ComboBoxItem Content="Organisation" />
                <ComboBoxItem Content="Asset" />
                <ComboBoxItem Content="Contact" />
            </ComboBox>
            <Button x:Name="btnListAll" Grid.Row="0" Grid.Column="1" Margin="10 10 10 10" Width="50"
                    Content="List All" Click="btnListAll_Click"/>
            <ComboBox x:Name="cmbColumn" Grid.Row="0" Grid.Column="2" Margin="10 10 10 10" Width="150"/>
            <TextBox x:Name="txtSearch" Grid.Row="0" Grid.Column="3" Margin="10 10 10 10" Width="200"/>
            <Button x:Name="btnSearch" Grid.Row="0" Grid.Column="4" Margin="10 10 10 10" Width="50"
                    Content="Search" Click="btnSearch_Click"/>
            <Button x:Name="btnRemovePane" Grid.Row="0" Grid.Column="5" Margin="10 10 10 10" Width="24"
                    Content="-" Click="btnRemovePane_Click"/>
            <Button x:Name="btnAddPane" Grid.Row="0" Grid.Column="6" Margin="0 10 10 10" Width="24"
                    Content="+" Click="btnAddPane_Click"/>
        </Grid>

        <!-- Results -->
        <Grid Grid.Row="1" x:Name="resultsArea">
            <Grid.RowDefinitions>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <custom:SqlDataGrid x:Name="dtgResults" Grid.Row="1"
                                Width="{Binding ActualWidth, ElementName=pageGrid}"
                                Height="{Binding ActualHeight, ElementName=resultsArea}"/>
        </Grid>
    </Grid>
</Page>