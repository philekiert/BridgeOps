<bridgeopsclient:CustomWindow  xmlns:bridgeopsclient="clr-namespace:BridgeOpsClient"
        x:Class="BridgeOpsClient.SelectResources"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BridgeOpsClient"
        mc:Ignorable="d" ResizeMode="NoResize"
        Title="Select Resources" SizeToContent="WidthAndHeight">
    <StackPanel>
        <ScrollViewer Margin="10 15 10 10" VerticalScrollBarVisibility="Auto" MinHeight="50" MaxHeight="500"
                      MinWidth="120" MaxWidth="500" HorizontalScrollBarVisibility="Auto">
            <Grid x:Name="grd">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
            </Grid>
        </ScrollViewer>
        <Button x:Name="btnSet" Content="Set" Style="{StaticResource primary-button}" Margin="10 5 10 10"
                Height="24" Width="80" HorizontalAlignment="Left" Click="btnSet_Click"/>
    </StackPanel>
</bridgeopsclient:CustomWindow>
