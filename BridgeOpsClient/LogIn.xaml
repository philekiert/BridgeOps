<Window x:Class="BridgeOpsClient.LogIn"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BridgeOpsClient"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="Log In" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterScreen"
        Loaded="Window_Loaded"
        KeyDown="Window_KeyDown" KeyUp="ToggleNetworkSettings"
        Closed="Window_Closed">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="55"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="55"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Grid.Column="1" Content="Username" Height="30" HorizontalAlignment="Left"
               Margin="0 45 0 0" FontWeight="SemiBold" FontSize="14"/>
        <TextBox Grid.Row="1" Grid.Column="1" x:Name="txtUsername" HorizontalAlignment="Center"
                 Margin="0 10 0 0" Width="120" GotFocus="txtUsername_GotFocus"/>
        <Label Grid.Row="2" Grid.Column="1" Content="Password" Height="30" HorizontalAlignment="Left"
               Margin="0 20 0 0" FontWeight="SemiBold" FontSize="14"/>
        <PasswordBox Grid.Row="3" Grid.Column="1" x:Name="pwdPassword" HorizontalAlignment="Center"
                     Margin="0 10 0 0" GotFocus="pwdPassword_GotFocus" Width="120"/>
        <Button Grid.Row="4" Grid.Column="1" x:Name="btnLogIn" Content="Log In" HorizontalAlignment="Left"
                Padding="8 0 8 1"  Margin="0 35 0 55" Click="btnLogIn_Click" FontSize="14" FontWeight="SemiBold"
                HorizontalContentAlignment="Left"/>
    </Grid>

</Window>
