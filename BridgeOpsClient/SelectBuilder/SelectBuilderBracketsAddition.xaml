<Window x:Class="BridgeOpsClient.SelectBuilderBracketsAddition"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BridgeOpsClient"
        xmlns:customcontrols="clr-namespace:BridgeOpsClient.CustomControls"
        mc:Ignorable="d"
        Title="Command Bracket Additions" Height="450" Width="800"
        WindowStartupLocation="CenterOwner">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" TextWrapping="Wrap" Margin="10 10 10 10"
               Text="This tool is currently unable to handle mixing AND and OR operators between conditions. You
will need to make this amendment yourself and run this command directly using SQL Server.&#x0A;&#x0A;Below is the
command generated by this tool without parentheses:"/>
        <customcontrols:CodeSpace Grid.Row ="1" x:Name="txtSQL" Margin="10 10 10 10"
                                  PreviewTextInput="txtSQL_PreviewTextInput"
                                  DataObject.Pasting="txtSQL_Pasting"/>
        <Button Grid.Row="2" Width="80" x:Name="btnOK" HorizontalAlignment="Left" Margin="10 10 10 10" Content="OK"/>
    </Grid>
</Window>
