<Window x:Class="BridgeOpsClient.SelectBuilder"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BridgeOpsClient"
        mc:Ignorable="d"
        Title="SelectBuilder" SizeToContent="WidthAndHeight" UseLayoutRounding="True" MinWidth="660">
    <Grid Margin="10 10 10 10">
        <Grid.Resources>
            <Style TargetType="ComboBox">
                <Setter Property="Margin" Value="10 5 10 5"/>
            </Style>
            <Style TargetType="TextBox">
                <Setter Property="Margin" Value="10 5 10 5"/>
            </Style>
            <Style TargetType="Label">
                <Setter Property="VerticalAlignment" Value="Center"/>
            </Style>
        </Grid.Resources>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" MaxWidth="50"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <!-- Table Selection -->
        <Label Content="Table" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"/>
        <ComboBox x:Name="cmbTable" Grid.Row="0" Grid.Column="2" Grid.ColumnSpan="2"
                  Margin="3 5 0 5" Width="150" MaxWidth="200" HorizontalAlignment="Left">
            <ComboBoxItem Content="Organisation"/>
            <ComboBoxItem Content="OrganisationChange"/>
            <ComboBoxItem Content="OrganisationContacts"/>
            <ComboBoxItem Content="Asset"/>
            <ComboBoxItem Content="AssetChange"/>
            <ComboBoxItem Content="Contact"/>
        </ComboBox>
        <!-- Join Selection -->
        <Button x:Name="btnAddJoin" Click="btnAddJoin_Click" Grid.Row="1" Grid.Column="0"
                Padding="0 -2 0 0" Margin="5 5 10 5" Width="24" Height="24" Content="+" />
        <Label Grid.Row="1" Grid.Column="1" Content="Table Joins" Grid.ColumnSpan="2"/>
        <Grid x:Name="grdJoins" Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="2" Margin="34 0 0 0"/>
        <!-- Column Selection -->
        <Button x:Name="btnAddColumn" Click="btnAddColumn_Click" Grid.Row="3" Grid.Column="0"
                Padding="0 -2 0 0" Margin="5 5 10 5" Width="24" Height="24" Content="+"/>
        <Label Grid.Row="3" Grid.Column="1" Content="Columns to Display" Grid.ColumnSpan="2"/>
        <Grid x:Name="grdColumns" Grid.Column="0" Grid.Row="4" Grid.ColumnSpan="4" Margin="34 0 0 0"/>
        <!-- WHERE Selection -->
        <Button x:Name="btnAddWhere" Click="btnAddWhere_Click" Grid.Row="5" Grid.Column="0"
                Padding="0 -2 0 0" Margin="5 5 10 5" Width="24" Height="24" Content="+"/>
        <Label Grid.Row="5" Grid.Column="1" Content="Where Clauses" Grid.ColumnSpan="2"/>
        <Grid x:Name="grdWheres" Grid.Column="0" Grid.Row="6" Grid.ColumnSpan="4" Margin="34 0 0 0"/>
    </Grid>
</Window>
